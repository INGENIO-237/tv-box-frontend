<div class="container d-flex justify-content-center">
  <form role="form" class="col-md-6" action="/users/<%= user.id_usr %>" method="post">
    <h2>Edit User</h2>
    <label>Email</label>
    <div class="mb-3">
      <input
        name="email"
        value="<%= user.email_usr %>"
        type="email"
        class="form-control"
        placeholder="Email"
        aria-label="Email"
        aria-describedby="email-addon"
      />
    </div>
    <label>First Name</label>
    <div class="mb-3">
      <input
        name="fname"
        value="<%= user.prenom_usr %>"
        type="text"
        class="form-control"
        placeholder="First Name"
        aria-label="FName"
        aria-describedby="fname-addon"
      />
    </div>
    <label>Name</label>
    <div class="mb-3">
      <input
        name="name"
        value="<%= user.nom_usr %>"
        type="name"
        class="form-control"
        placeholder="Name"
        aria-label="Name"
        aria-describedby="name-addon"
      />
    </div>
    <label>Phone</label>
    <div class="mb-3">
      <input
        name="phone"
        value="<%= user.phone_usr %>"
        type="tel"
        class="form-control"
        placeholder="Phone"
        aria-label="Phone"
        aria-describedby="phone-addon"
      />
    </div>
    <div class="btn-group d-flex justify-content-center">
      <input type="submit" value="Save" class="btn btn-success" />
    </div>
  </form>
</div>
