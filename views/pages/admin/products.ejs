<!-- Form -->
<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Product</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form role="form">
          <label>Title</label>
          <div class="mb-3">
            <input
              type="text"
              class="form-control"
              placeholder="Title"
              aria-label="Title"
              aria-describedby="title-addon"
            />
          </div>
          <label>Category</label>
          <div class="mb-3">
            <select
              class="form-control"
              placeholder="Category"
              aria-label="Category"
              aria-describedby="category-addon"
            >
              <option value="">Computer</option>
              <option value="">Television</option>
            </select>
          </div>
          <label>Description</label>
          <div class="mb-3">
            <textarea
              name=""
              id=""
              cols="30"
              rows="4"
              class="form-control"
              placeholder="Description"
              aria-label="Description"
              aria-describedby="description-addon"
            ></textarea>
          </div>
          <label>Price</label>
          <div class="mb-3">
            <input
              type="text"
              class="form-control"
              placeholder="Price"
              aria-label="Price"
              aria-describedby="price-addon"
            />
          </div>
          <label>Image</label>
          <div class="mb-3">
            <input
              type="file"
              accept=".png,.jpg,.jpeg"
              class="form-control"
              placeholder="Image"
              aria-label="Image"
              aria-describedby="image-addon"
            />
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>
        <button type="button" class="btn btn-info">Save</button>
      </div>
    </div>
  </div>
</div>
<!-- End -->

