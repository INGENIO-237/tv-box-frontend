<div class="album py-5 bg-body-tertiary">
  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% if(payments.length > 0) { %>
      <% for(let i = 0; i < payments.length; i++){ %>
      <div class="card mb-4 col-md-3 mx-1">
        <a href="/transactions/<%= payments[i].id_paie %>">
          <div class="card-body pt-4 p-3">
            <ul class="list-group">
              <li
                class="list-group-item border-0 d-flex justify-content-between ps-0 mb-2 border-radius-lg"
              >
                <div class="d-flex align-items-center">
                  <button
                    class="btn btn-icon-only btn-rounded btn-outline-success mb-0 me-3 btn-sm d-flex align-items-center justify-content-center"
                  >
                    <i class="fas fa-arrow-up"></i>
                  </button>
                  <div class="d-flex flex-column">
                    <h6 class="mb-1 text-dark text-sm">Stripe</h6>
                    <span class="text-xs"><%= payments[i].date_paie %></span>
                  </div>
                </div>
                <div
                  class="d-flex align-items-center text-success text-gradient text-sm font-weight-bold"
                >
                  $ <%= payments[i].montant_paie %>
                </div>
              </li>
            </ul>
          </div>
        </a>
      </div>
      <% } %>
      <% }else{ %>
        <p class="text-center">No payments performed yet</p>
      <% } %>
    </div>
  </div>
</div>
